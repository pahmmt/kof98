{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "id": {
      "$ref": "definition.json#/definitions/idDefinition"
    },
    "name": {
      "$ref": "definition.json#/definitions/nameDefinition"
    },
    "type": {
      "type": "string",
      "enum": ["dps", "gank", "tank"]
    },
    "aptitude": {
      "type": "integer",
      "enum": [11, 12, 13, 14, 15]
    },
    "soul": {
      "type": "string",
      "enum": ["bear", "tiger", "snake", "turtle", "vacuum"]
    },
    "soul_info": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "image": {
          "type": "string"
        }
      },
      "required": ["name", "description", "image"]
    },
    "feature": {
      "type": "object",
      "properties": {
        "description": {
          "type": "string"
        },
        "tags": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": [
              "Acting",
              "Another World",
              "Armor Break",
              "Blunt",
              "Captain",
              "Chase Attack",
              "Counter",
              "DOA6",
              "Damage Breakthrough",
              "Damage Sharing",
              "Deterrence",
              "Dispel",
              "Disturber",
              "Domain",
              "Flame",
              "Frozen Skill",
              "Healing Power",
              "Hidden",
              "Ikari Team",
              "Injury Limit",
              "Iron Wall",
              "Kyokugenryu",
              "Leaders",
              "Orochi Incarnation",
              "Orochi's Blood",
              "Overlimit Rage",
              "Posture Conversion",
              "Power Strike",
              "Protagonist",
              "Purifier",
              "Rage Aid",
              "Rage Suppression",
              "Scene",
              "Sepsis",
              "Sepsis Cure",
              "Seran Kagura",
              "Shield",
              "Shield Penetration",
              "Special Control",
              "Sustain Damage",
              "Tactical Retreat",
              "Thorn Protect"
            ]
          }
        }
      },
      "required": ["description", "tags"]
    },
    "fates": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "anyOf": [
              {
                "enum": ["Hồn hiệu", "Hồn sách", "Hồn vũ khí"]
              },
              {
                "type": "string"
              }
            ]
          },
          "conditions": {
            "type": "array",
            "items": {
              "anyOf": [
                {
                  "$ref": "definition.json#/definitions/nameDefinition"
                },
                {
                  "$ref": "definition.json#/definitions/equipmentNameDefinition"
                },
                {
                  "type": "string"
                }
              ]
            }
          },
          "bonus": {
            "type": "string"
          }
        },
        "required": ["name", "conditions", "bonus"]
      }
    },
    "element_fates": {
      "type": "array",
      "items": {
        "$ref": "definition.json#/definitions/nameDefinition"
      }
    },
    "skills": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "oneOf": [
              {
                "const": "a1",
                "description": "Độc chiêu"
              },
              {
                "const": "a2",
                "description": "Tuyệt kỹ"
              },
              {
                "const": "p1",
                "description": "Nội tại"
              }
            ]
          },
          "detail": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string"
                },
                "state": {
                  "type": "string",
                  "oneOf": [
                    {
                      "const": "normal",
                      "description": "Thường"
                    },
                    {
                      "const": "weapon_awaken",
                      "description": "Thức tỉnh vũ khí"
                    },
                    {
                      "const": "lake_element",
                      "description": "Nhị môn"
                    },
                    {
                      "const": "thunder_element",
                      "description": "Tứ môn"
                    },
                    {
                      "const": "water_element",
                      "description": "Lục môn"
                    }
                  ]
                },
                "content": {
                  "type": "string"
                }
              },
              "required": ["name", "state", "content"]
            }
          }
        },
        "required": ["type", "detail"]
      }
    },
    "equipments": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "anyOf": [
              {
                "$ref": "definition.json#/definitions/equipmentNameDefinition"
              },
              {
                "type": "string"
              }
            ]
          },
          "description": {
            "type": "string",
            "enum": ["Tăng chỉ số % ATK", "Tăng chỉ số % HP", "Nâng cấp kỹ năng tuyệt kỹ"]
          },
          "image": {
            "type": "string"
          }
        },
        "required": ["name", "description", "image"]
      }
    },
    "galleries": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "image": {
            "type": "string"
          }
        },
        "required": ["name", "image"]
      }
    }
  },
  "required": [
    "id",
    "name",
    "type",
    "aptitude",
    "soul",
    "soul_info",
    "feature",
    "fates",
    "element_fates",
    "skills",
    "equipments",
    "galleries"
  ]
}
